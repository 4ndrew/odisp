<project name="nms" default="all" basedir=".">
    <property file="build.properties"/>

    <target name="odisp">
	<javac srcdir="${src-dir}/odisp" destdir="${work-dir}/build" debug="yes"/>
    </target>
    <target name="odisp-jar" depends="odisp">
	<jar destfile="${work-dir}/release/odisp.jar" basedir="${work-dir}/build" includes="com/novel/odisp/** com/novel/stdobj/**"/>
    </target>
    <target name="jar" depends="odisp-jar"/>
    <target name="all" depends="odisp"/>
</project>