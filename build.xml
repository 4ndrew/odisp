<project name="nms" default="all" basedir=".">
    <property file="../build.properties"/>
    <property name="odisp-src" location="./"/>
    <path id="odisp-src">
	<pathelement location="${odisp-src}"/>
    </path>
    <target name="odisp-doc">
	<javadoc
	    destdir="${doc-dir}"
	    sourcepathref="odisp-src" 
	    encoding="koi8-r" 
	    author="yes" 
	    version="yes" 
	    packagenames="com.novel.odisp.*,com.novel.stdobj.*"
	    verbose="no"/>
    </target>
    <target name="odisp">
	<javac srcdir="${odisp-src}" destdir="${build-dir}" debug="yes"/>
    </target>
    <target name="odisp-jar" depends="odisp">
	<jar destfile="${release-dir}/odisp.jar" basedir="${build-dir}/" includes="com/novel/odisp/** com/novel/stdobj/**"/>
    </target>
    <target name="jar" depends="odisp-jar"/>
    <target name="doc" depends="odisp-doc"/>
    <target name="all" depends="odisp"/>
</project>