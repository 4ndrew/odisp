<!-- $Id: build.xml,v 1.9 2003/12/08 14:43:40 valeks Exp $ -->
<project name="nms" default="all" basedir=".">
    <property file="build.properties"/>

    <target name="odisp">
	<javac srcdir="${src-dir}/odisp" destdir="${work-dir}/build" debug="yes"/>
    </target>
    <target name="odisp-jar" depends="odisp">
	<jar destfile="${work-dir}/release/odisp.jar" basedir="${work-dir}/build" includes="com/novel/odisp/** com/novel/stdobj/** com/novel/stdmsg/**">
                <manifest>
                        <attribute name="Built-By" value="${user.name}"/>
                        <attribute name="Main-Class" value="com.novel.odisp.StandartDispatcher"/>
                </manifest>
        </jar>
    </target>
    <target name="jar" depends="odisp-jar"/>
    <target name="all" depends="odisp"/>
</project>